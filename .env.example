# ============================================================================
# FLASK SERVER CONFIGURATION
# ============================================================================

# Enable debug mode (True/False)
DEBUG=True

# Server host address
HOST=0.0.0.0

# Server port
PORT=5000


# ============================================================================
# SEEDR API CONFIGURATION
# ============================================================================

# Request timeout in seconds
SEEDR_TIMEOUT=30.0

# Proxy server (leave empty if not using proxy)
SEEDR_PROXY=


# ============================================================================
# AUTHENTICATION & CREDENTIALS
# ============================================================================

# Your Seedr account credentials
# IMPORTANT: Copy this file to .env and fill in your actual credentials
DEFAULT_USERNAME=your_email@example.com
DEFAULT_PASSWORD=your_password_here

# Default Auth Mode
# When enabled (True), forces use of default credentials and auto-initializes on startup
# Set to False to use manual authentication
DEFAULT_AUTH=False


# ============================================================================
# VLC MEDIA PLAYER CONFIGURATION
# ============================================================================

# Path to VLC executable for playback functionality
# Choose the appropriate path for your operating system:

# Windows (default):
VLC_PATH=C:\Program Files\VideoLAN\VLC\vlc.exe

# Linux (uncomment and use if on Linux):
# VLC_PATH=/usr/bin/vlc

# macOS (uncomment and use if on macOS):
# VLC_PATH=/Applications/VLC.app/Contents/MacOS/VLC


# ============================================================================
# STORAGE CONFIGURATION
# ============================================================================

# Path to store authentication tokens
TOKEN_STORAGE_PATH=tokens.json
